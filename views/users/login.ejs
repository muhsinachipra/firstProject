	<script>
		const Endpoint = '/loginValidation'; // Define the correct endpoint

		const passwordValidation = async (data) => {
			try {
				const response = await fetch(Endpoint, {
					method: 'POST',
					headers: {
						'Content-Type': 'application/json',
						// You can include additional headers if needed
					},
					body: JSON.stringify(data),
				});

				if (!response.ok) {
					throw new Error('Network response was not ok');
				}

				const responseData = await response.json();
				console.log('Data sent successfully:', responseData);
				// Update the page based on the response, e.g., show an error message or update UI
			} catch (error) {
