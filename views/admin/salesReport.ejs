<%- include('./layouts/header.ejs') %>
    <%- include('./layouts/sideBar.ejs') %>
        <%- include('./layouts/navBar.ejs') %>


            <div class="main-panel">
                <div class="content-wrapper">

                    <div class="col-lg-12 grid-margin stretch-card">
                        <div class="card">
                            <div class="card-body">
                                <h2 class="card-title" style="text-align: center;">ORDERS</h2>
                                <div class="table-responsive">
                                    <% if (salesData.length> 0) { %>

                                        <table id="search-table" class="table table-dark">
                                            <thead>
                                                <tr>
                                                    <th>Order ID</th>
                                                    <th>Username</th>
                                                    <th>Product</th>
                                                    <th>Category</th>
                                                    <th>Price</th>
                                                    <th>Qty</th>
                                                    <th>Order Date</th>
                                                    <th>Time</th>
                                                    <th>Payment Method</th>
                                                    <th>Order Status</th>

                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% salesData.reverse().forEach(sale=> { %>
                                                    <tr>
                                                        <td>
                                                            <%= sale._id %>
                                                        </td>
                                                        <td>
                                                            <%= sale.userData[0]?.firstName || '' %>
                                                        </td>
                                                        <td>
                                                            <%= sale.productDetails[0]?.productName || '' %>
                                                        </td>
                                                        <td>
                                                            <%= sale.productDetails[0]?.productCategory || '' %>
                                                        </td>
                                                        <td>&#8377; <%= sale.products.price.toFixed(2) || '' %>
                                                        </td>
                                                        <td>
                                                            <%= sale.products.quantity || '' %>
                                                        </td>
                                                        <td>
                                                            <%= sale.orderDate.toDateString() %>
                                                        </td>
                                                        <td>
                                                            <%= sale.orderDate.toLocaleTimeString() %>
                                                        </td>
                                                        <td>
                                                            <%= sale.paymentOption || '' %>
                                                        </td>
                                                        <td>
                                                            <%= sale.products.orderStatus || '' %>
                                                        </td>

                                                    </tr>
                                                    <% }) %>
                                                        <% } else { %>
                                                            <tr>
                                                                <td colspan="9" class="text-center">
                                                                    <p style="text-align: center;">No sales found.</p>
                                                                </td>
                                                            </tr>
                                                            <% } %>
                                            </tbody>
                                        </table>

                                </div>

                            </div>
                        </div>
                    </div>

                </div>

                <%- include('./layouts/footer.ejs') %>