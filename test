products.forEach((product) => {
  const productPrice = parseFloat(product.dataset.price || 0);
  const productQuantity = parseInt(product.textContent);
  newTotal += productPrice * productQuantity;
});


products.forEach((product) => {
  const productPrice = parseFloat(product.dataset.price || 0);
  const productQuantity = parseInt(product.textContent);

  if (isNaN(productPrice) || isNaN(productQuantity)) {
      console.log('Invalid data: productPrice=', productPrice, 'productQuantity=', productQuantity);
  } else {
      newTotal += productPrice * productQuantity;
  }
});



