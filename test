<script>
    // Show/hide different shipping address form
    const shipToDifferentAddressCheckbox = document.getElementById('shipToDifferentAddress');
    const differentAddressForm = document.getElementById('differentAddressForm');

    shipToDifferentAddressCheckbox.addEventListener('change', function () {
        if (shipToDifferentAddressCheckbox.checked) {
            differentAddressForm.style.display = 'block';
        } else {
            differentAddressForm.style.display = 'none';
        }
    });
</script>


